<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- MUITO IMPORTANTE: não substituir as respostas 404 / 500 do Node -->
    <httpErrors existingResponse="PassThrough" />

    <!-- handler do iisnode: diz ao IIS que "server.js" é uma app Node -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- reescrever tudo o que NÃO é ficheiro/diretoria para o server.js -->
    <rewrite>
      <rules>
        <rule name="SendEverythingToNode" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Só passa para o Node se NÃO for ficheiro físico -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Nem diretoria física -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>
